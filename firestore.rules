rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users: Users can read/write only their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Conventions: Authenticated users only
    // Ideally should be role-based, but starting with Auth-only as Step 1
    match /conventions/{conventionId} {
      allow read, write: if isAuthenticated();
    }

    // Notifications: Authenticated users only
    // Needed for Client-side 'createInAppNotification' and reading
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }

    // Mission Orders: Authenticated users only
    match /missionOrders/{orderId} {
      allow read, write: if isAuthenticated();
    }

    // Alumni: Authenticated users only
    match /alumni/{alumniId} {
      allow read, write: if isAuthenticated();
    }

    // OTPs: Deny All (Server-side Admin SDK only)
    match /otps/{otpId} {
        allow read, write: if false;
    }

    // Invitations: Authenticated users can create (send) invitations
    // Verification is done via Server-side Admin SDK
    match /invitations/{invitationId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if false; // Only Admin SDK or specific rules if needed later
    }

    // Rate Limits: Deny All (Server-side Admin SDK only)
    match /rate_limits/{limitId} {
      allow read, write: if false;
    }
  }
}
